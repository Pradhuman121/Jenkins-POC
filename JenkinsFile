pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Pradhuman121/Jenkins-POC.git']]])
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install flask'
                sh 'python3 -m flask'
            }
        }
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/Pradhuman121/Jenkins-POC.git'
                sh 'python3 poc.py'
            }
        }
        stage('Completed') {
            steps {
                echo "Completed Successfully"
            }
        }
    }
}
