pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Pradhuman121/Jenkins-POC.git']]])
            }
        }
        stage('Install pipx') {
            steps {
                script {
                    // Install pipx
                    sh 'python3 -m pip install --user pipx'
                }
            }
        }
        stage('Install Flask') {
            steps {
                script {
                    // Install Flask using pipx
                    sh 'pipx install flask'
                }
            }
        }
        stage('Run Script') {
            steps {
                script {
                    // Run your Python script
                    sh 'python3 poc.py' // Assuming your script is named poc.py
                }
            }
        }
        stage('Completed') {
            steps {
                echo "Completed Successfully"
            }
        }
    }
}
