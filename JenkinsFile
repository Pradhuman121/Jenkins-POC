pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Pradhuman121/Jenkins-POC.git']]])
            }
        }
        stage('Setup Virtual Environment') {
            steps {
                script {
                    // Create and activate a virtual environment
                    sh 'python3 -m venv myvenv'
                    sh '. myvenv/bin/activate'
                }
            }
        }
        stage('Install Flask') {
            steps {
                script {
                    // Install Flask within the virtual environment
                    sh 'pipx install flask'
                }
            }
        }
        stage('Run Script') {
            steps {
                script {
                    // Run your Python script within the virtual environment
                    sh 'python poc.py' // Assuming your script is named poc.py
                }
            }
        }
        stage('Completed') {
            steps {
                echo "Completed Successfully"
            }
        }
    }
}
