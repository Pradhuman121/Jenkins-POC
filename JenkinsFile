pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Pradhuman121/Jenkins-POC']]])
            }
        }
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/Pradhuman121/Jenkins-POC'
                sh 'python3 poc.py'
            }
        }
        stage('Test') {
            steps {
                sh 'python3 -m flask'
            }
        }
    }
}
