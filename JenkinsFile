pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Pradhuman121/Jenkins-POC.git']]])
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pipx install flask'
            }
        }
        stage('Run Script') {
            steps {
                sh 'python3 poc.py' // Assuming your script is named poc.py
            }
        }
        stage('Completed') {
            steps {
                echo "Completed Successfully"
            }
        }
    }
}
